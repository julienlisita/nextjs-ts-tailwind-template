generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model JobOffer {
  id          Int      @id @default(autoincrement())
  title       String
  location    String
  description String
  contractType String? 
  publishedAt DateTime @default(now())
  updatedAt   DateTime @updatedAt 
}

model Testimonial {
  id           Int       @id @default(autoincrement())
  name         String
  role         String?   // ex: "Cliente", "CEO @ Acme"
  company      String?
  city         String? 
  quote        String
  rating       Decimal?  // 1..5, supporte 4.5
  avatarUrl    String?
  displayDate  String?   // ex: "Août 2025" (si tu veux afficher un libellé libre)
  highlight    Boolean   @default(false)
  variant      String?   // 'default' | 'compact' | 'horizontal'

  isPublished  Boolean   @default(true)
  publishedAt  DateTime? @default(now())

  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model NewsItem {
  id           Int       @id @default(autoincrement())
  slug         String    @unique
  title        String
  description  String
  source       String?
  url          String?   @unique
  displayDate  String?
  publishedAt  DateTime? @default(now())
  isPublished  Boolean   @default(true)
  coverImage   String?
  imageUrl     String?
  imageAlt     String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

enum SlotStatus {
  AVAILABLE
  BOOKED
  DISABLED
}

model ReservationSlot {
  id          Int           @id @default(autoincrement())
  startAt     DateTime      // date + heure de début
  endAt       DateTime      // optionnel mais pratique pour l’affichage
  status      SlotStatus    @default(AVAILABLE)

  // Relation vers la réservation (0 ou 1)
  reservation Reservation?

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model Reservation {
  id           Int             @id @default(autoincrement())
  slotId       Int             @unique   // un créneau = max 1 réservation
  slot         ReservationSlot @relation(fields: [slotId], references: [id])

  clientName   String
  clientEmail  String
  clientPhone  String?
  message      String?

  createdAt    DateTime        @default(now())
}

